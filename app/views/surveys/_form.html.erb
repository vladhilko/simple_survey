<div class="w-full max-w-3xl md:max-w-6xl p-8 md:p-16 h-full flex flex-col justify-center">
  <h1 class="text-3xl md:text-5xl font-bold text-center text-green-600 mb-8 md:mb-12"><%= form_title %></h1>
  <%= form_with model: @survey, local: true do |form| %>
    <div class="mb-8 md:mb-12">
      <%= form.label :question, class: 'block text-gray-700 font-semibold mb-4 md:mb-6 text-lg md:text-2xl' %>
      <%= form.text_area :question, placeholder: "Enter your survey question here...", rows: 3, class: 'form-textarea mt-1 block w-full text-center text-xl md:text-3xl rounded-md border-gray-300 shadow-lg focus:border-green-500 focus:ring focus:ring-green-200 focus:ring-opacity-50 placeholder-gray-500 placeholder-opacity-100 resize-none overflow-hidden' %>
    </div>

    <div class="flex justify-center mt-4 md:mt-8">
      <%= form.submit submit_button_text, class: 'bg-green-600 text-white font-semibold py-3 md:py-4 px-6 md:px-10 rounded-md hover:bg-green-700 hover:shadow-xl cursor-pointer text-lg md:text-2xl' %>
    </div>
  <% end %>
</div>
